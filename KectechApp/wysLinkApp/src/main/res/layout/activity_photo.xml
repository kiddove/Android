<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kectech.android.wyslink.activity.PhotoOfHallOfMainActivity">

    <com.kectech.android.wyslink.pager.CustomViewPager
        android:id="@+id/photo_activity_viewpager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true" />


    <LinearLayout
        android:id="@+id/photo_activity_dots_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:padding="@dimen/activity_horizontal_margin" />

    <ProgressBar
        android:id="@+id/photo_activity_progressbar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_centerInParent="true"
        android:background="@drawable/photo_activity_progress_background"
        android:indeterminate="false"
        android:progress="0"
        android:progressDrawable="@drawable/photo_activity_progress"
        android:visibility="gone" />
</RelativeLayout>
