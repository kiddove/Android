<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.kectech.android.wyslink.thirdparty.CacheBitmap.RecyclingImageView
        android:id="@+id/item_image"
        android:layout_width="@dimen/choose_image_grid_item_size"
        android:layout_height="@dimen/choose_image_grid_item_size"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_default_image" />

    <ImageView
        android:id="@+id/item_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/item_image"
        android:layout_alignTop="@+id/item_image"
        android:background="@drawable/choose_image_checkbox_selector" />
</RelativeLayout>