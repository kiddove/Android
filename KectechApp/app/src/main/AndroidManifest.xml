<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kectech.android.kectechapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />
    <!--https://developer.android.com/training/camera/photobasics.html-->
    <application
        android:allowBackup="true"
        android:icon="@drawable/kdlinx"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MainActivity"
            android:configChanges="orientation|keyboard|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/MainTheme" />
        <activity
            android:name=".activity.HallOfMainActivity"
            android:configChanges="orientation|keyboard|keyboardHidden|screenSize"
            android:label="@string/title_activity_main_hall">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.kectech.android.kectechapp.activity.MainActivity" />
        </activity>
        <activity
            android:name=".activity.PhotoOfHallOfMainActivity"
            android:configChanges="orientation|keyboard|keyboardHidden|screenSize"
            android:label="@string/prompt_navigation_back"
            android:theme="@style/AppTheme.FullScreen">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.kectech.android.kectechapp.activity.HallOfMainActivity" />
        </activity>
        <activity
            android:name=".activity.VideoOfHallOfMainActivity"
            android:configChanges="orientation|keyboard|keyboardHidden|screenSize"
            android:label="@string/title_activity_main_hall_Video">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.kectech.android.kectechapp.activity.HallOfMainActivity" />
        </activity>
        <activity
            android:name=".activity.LoginActivity"
            android:configChanges="orientation|keyboard|keyboardHidden|screenSize"
            android:theme="@style/MainTheme"
            android:windowSoftInputMode="adjustResize|stateVisible">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.RegisterActivity"
            android:configChanges="orientation|keyboard|keyboardHidden|screenSize"
            android:label="@string/title_activity_register"
            android:windowSoftInputMode="adjustResize|stateVisible" />
        <activity
            android:name=".activity.AccountPreferenceActivity"
            android:configChanges="orientation|keyboard|keyboardHidden|screenSize"
            android:label="@string/title_activity_account"
            android:windowSoftInputMode="adjustResize|stateHidden" />
        <activity
            android:name=".activity.NewPostActivity"
            android:configChanges="orientation|keyboard|keyboardHidden|screenSize"
            android:label="@string/title_activity_main_hall_photo"
            android:windowSoftInputMode="adjustResize|stateVisible" />
        <!--not using for now-->
        <!--android:theme="@style/PopupTheme"-->
        <activity
            android:name=".activity.ChooseImageActivity"
            android:configChanges="orientation|keyboard|keyboardHidden|screenSize"
            android:label="@string/prompt_navigation_back" />
    </application>

</manifest>
