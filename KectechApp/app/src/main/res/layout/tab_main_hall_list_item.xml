<?xml version="1.0" encoding="utf-8"?>
<!--list item in tab hall of main activity-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="2dp"
    android:paddingBottom="2dp">

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tab_main_hall_list_item_check"
        android:gravity="center"
        android:focusable="false"
        android:paddingRight="5dp"
        android:layout_centerVertical="true"
        android:button="@drawable/checkbox_selector"
        android:visibility="gone"
        android:clickable="false" />

    <!--<ImageView-->
        <!--android:layout_width="30dp"-->
        <!--android:layout_height="30dp"-->
        <!--android:src="@drawable/delete"-->
        <!--android:id="@+id/tab_main_hall_list_item_delete"-->
        <!--android:layout_marginLeft="10dp"-->
        <!--android:layout_marginRight="10dp"-->
        <!--android:layout_centerVertical="true"-->
        <!--android:clickable="true"-->
        <!--android:longClickable="true"/>-->

    <com.kectech.android.kectechapp.thirdparty.CacheBitmap.RecyclingImageView
        android:id="@+id/tab_main_hall_list_item_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="@string/video_list_item_img_description"
        android:paddingRight="10dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tab_main_hall_list_item_title"
        android:layout_marginTop="2dp" />

    <TextView
        android:id="@+id/tab_main_hall_list_item_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_toRightOf="@+id/tab_main_hall_list_item_check"
        android:text="@string/hello_world"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="2dp" />

    <TextView
        android:id="@+id/tab_main_hall_list_item_desc"
        android:layout_width="fill_parent"
        android:layout_height="65dp"
        android:textSize="14sp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="@color/black"
        android:layout_toLeftOf="@+id/tab_main_hall_list_item_img"
        android:layout_toRightOf="@+id/tab_main_hall_list_item_check"
        android:layout_below="@+id/tab_main_hall_list_item_title"
        android:text="@string/action_settings"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:gravity="left"/>
    <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:text="E"-->
        <!--android:layout_marginRight="5dp"-->
        <!--android:layout_alignBottom="@+id/tab_main_hall_list_item_title"-->
        <!--android:gravity="center"-->
        <!--android:textSize="18sp"-->
        <!--android:paddingBottom="5dp"-->
        <!--android:textColor="@color/tab_selected"/>-->
    <TextView
        android:id="@+id/tab_main_hall_list_item_memo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tab_main_hall_list_item_desc"
        android:text="EventHall @kevin"
        android:layout_alignBottom="@+id/tab_main_hall_list_item_img"
        android:gravity="left"
        android:textSize="14sp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_alignRight="@+id/tab_main_hall_list_item_desc"
        android:layout_toLeftOf="@+id/tab_main_hall_list_item_img"
        android:textColor="@android:color/darker_gray"
        android:layout_marginTop="2dp" />
</RelativeLayout>