<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/photo_activity_image_fragment_textview"
        android:layout_gravity="center_horizontal"
        android:text="@string/hello_world"
        android:textSize="24sp"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/photo_activity_image_fragment_textview"
        android:scrollbarAlwaysDrawVerticalTrack="true">

        <android.kectech.com.stylingactionbar.view.ScaleImageView
            android:id="@+id/photo_activity_image_fragment_imageview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:contentDescription="Specs"
            android:scaleType="fitCenter" />
    </ScrollView>

</RelativeLayout>